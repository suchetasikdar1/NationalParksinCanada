@page
@model CanadianNationalParks.Pages.IndexModel
@{
    ViewData["Title"] = "Canadian National Parks";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="container mt-4">

    <header class="mb-4">
        <h1 class="text-primary">ðŸ‡¨ðŸ‡¦ Canadian National Parks</h1>
        <p class="text-muted">A sample web page by <strong>Sucheta Sikdar</strong>, hosted in Azure</p>
    </header>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Park Name</th>
                <th>Province/Territory</th>
                <th>Notable Animals</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var park in Model.NationalParks)
            {
                <tr>
                    <td>@park.Name</td>
                    <td>@park.ProvinceOrTerritory</td>
                    <td>@park.NotableAnimals</td>
                </tr>
            }
        </tbody>
    </table>

    <footer class="mt-5 text-center text-muted">
        &copy; @DateTime.Now.Year Sucheta Sikdar | Hosted on Microsoft Azure
    </footer>

</body>
</html>

